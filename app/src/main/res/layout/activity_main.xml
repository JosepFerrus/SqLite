<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.josep.sqlite.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ciclo"
        android:layout_alignBaseline="@+id/cicle"
        android:layout_alignBottom="@+id/cicle"
        android:layout_alignStart="@+id/nombre" />

    <TextView
        android:text="Curso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/curs"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/curso"
        android:layout_alignBaseline="@+id/curs"
        android:layout_alignBottom="@+id/curs"
        android:layout_alignStart="@+id/ciclo" />

    <TextView
        android:text="Ciclo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cicle"
        android:textSize="18sp"
        android:layout_above="@+id/curso"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp" />

    <TextView
        android:text="Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nom"
        android:textSize="18sp"
        android:layout_above="@+id/ciclo"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginEnd="35dp"
        android:id="@+id/nombre"
        android:layout_alignBaseline="@+id/nom"
        android:layout_alignBottom="@+id/nom"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edat"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/edad"
        android:layout_alignBottom="@+id/edad"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/notam"
        android:layout_below="@+id/edad"
        android:layout_alignStart="@+id/edad"
        android:inputType="textPersonName" />

    <TextView
        android:text="Nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Nota"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/notam"
        android:layout_alignBottom="@+id/notam"
        android:layout_alignEnd="@+id/cicle" />

    <TextView
        android:text="Nuevo estudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Introducir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notam"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:id="@+id/introducir" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="21dp"
        android:id="@+id/edad"
        android:inputType="textPersonName"
        android:layout_below="@+id/curso"
        android:layout_alignStart="@+id/curso" />

</RelativeLayout>
